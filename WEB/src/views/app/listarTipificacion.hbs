<div id="main">
  <div class="row">
    <div class="col s12">
      <div class="container">
        <div class="section ">
          <div class="row">
            <div class="col s12">
              <div class="card">
                <div class="card-content">
                  <h4 class="card-title" data-i18n="Lista de tipificaciones">Lista de tipificaciones </h4>
                  <div class="row">
                    <div class="col s12">
                      <table id="tuTablaTipificaciones" class="display">
                        <thead style="color: #fff">
                          <tr class="custom-gradient_black">
                            <th style="width: auto;" data-i18n="Nombre">Nombre</th>
                            <th style="width: 170px;" data-i18n="Acción">Acción</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each listaTipificacion}}
                          <tr>
                            <td>{{this.TIP_CNOMBRE_TIPIFICACION}}</td>
                            <td>
                              <a class="btn waves-effect waves-light color-oscuro" id="editar"
                                href="/tipificaciones/actualizarTipificacion/{{this.EnCrypt}}"><i
                                  class='bx bx-edit-alt'></i></a>
                              <a class="btn waves-effect waves-light red accent-2" id="borrar"
                                eliminarTipificacion="{{this.EnCrypt}}"><i class='bx bx-trash-alt'></i></a>
                            </td>
                          </tr>
                          {{/each}}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/listarTipificaciones.js"></script>