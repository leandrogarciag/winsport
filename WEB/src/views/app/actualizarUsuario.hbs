<div id="main">
  <div class="row">
    <div class="col s12">
      <div class="container">

        <div class="row">
          <div class="col s12">
            <div id="input-fields" class="card card-tabs">
              <div class="card-content">
                <div class="card-title">
                  <div class="row">
                    <div class="col s12 m6 l10">
                      <h4 class="card-title" data-i18n="Modificar usuario">Modificar usuario</h4>
                    </div>
                  </div>
                </div>
                <div id="view-input-fields">
                  <div class="row">
                    <div class="col s12">
                      <form id="formActualizarUsuario" class="row" action="/usuarios/actualizarUsuario/{{usuario.EnCrypt}}" method="post">

                        <div class="row">
                          {{! Nombre }}
                          <div class="input-field col s12 m6 l4">
                            <input type="text" name="usuario_nombre" id="usuario_nombre" value="{{usuario.USU_CNOMBRE}}" required />
                            <label for="usuario_nombre"><span data-i18n="Nombre">Nombre</span><span class="red-text"> *</span></label>
                          </div>

                          {{! Documento }}
                          <div class="input-field col s12 m6 l4">
                            <input type="text" name="usuario_documento" id="usuario_documento" value="{{usuario.USU_CDOCUMENTO}}" required />
                            <label for="usuario_documento"><span data-i18n="Documento">Documento</span><span class="red-text"> *</span></label>
                          </div>

                          {{! Rol }}
                          <div class="input-field col s12 m6 l4">
                            <select class="select" name="usuario_rol" id="usuario_rol" required>
                              <option value="" disabled selected>Select option
                              </option>
                              {{#if (isAdministrador user.Rol)}}
                                <option value="AGENTE">AGENTE</option>
                                <option value="SUPERVISOR">SUPERVISOR</option>
                                <option value="REPORTING">REPORTING</option>
                                <option value="ADMINISTRADOR">ADMINISTRADOR</option>
                              {{/if}}

                              {{#if (isSupervisor user.Rol)}}
                                <option value="AGENTE">AGENTE</option>
                                <option value="REPORTING">REPORTING</option>
                                <option value="SUPERVISOR">SUPERVISOR</option>
                              {{/if}}
                            </select>
                            <label for="usuario_rol"><span data-i18n="Rol">Rol</span><span class="red-text"> *</span></label>
                          </div>
                          <div id="rolUsuario" hidden>{{usuario.USU_CROL}}</div>
                        </div>

                        <div class="row">
                          {{! Nombre usuario}}
                          <div class="input-field col s12 m6 l4">
                            <input type="text" name="usuario_nombreUsuario" id="usuario_nombreUsuario" value="{{usuario.USU_CUSUARIO}}" required />
                            <label for="usuario_nombreUsuario"><span data-i18n="Nombre de usuario">Nombre de usuario</span><span class="red-text"> *</span></label>
                          </div>

                          {{! Password }}
                          <div class="input-field col s12 m6 l4">
                            <input type="password" name="usuario_password" id="usuario_password" required />
                            <label for="usuario_password">Password<span class="red-text">*</span></label>
                          </div>

                          {{! Campa√±a }}
                          <div class="input-field col s12 m6 l4">
                            <select class="select" name="usuario_campana" id="usuario_campana" required>
                              <option value="" disabled selected>Select option
                              </option>
                              <option value="WINSPORT">WINSPORT</option>
                            </select>
                            <label for="usuario_campana"><span data-i18n="Campana">Campana</span><span class="red-text"> *</span></label>
                          </div>
                          <div id="campanaUsuario" hidden>{{usuario.USU_CCAMPANA}}</div>
                        </div>

                        <div class="row">
                          {{! Cantidad de chats }}
                          <div class="input-field col s12 m6 l4">
                            <select class="select" name="usuario_chats" id="usuario_chats" required>
                              <option value="0" selected>0</option>
                              <option value="1">1</option>
                              <option value="2">2</option>
                              <option value="3">3</option>
                              <option value="4">4</option>
                              <option value="5">5</option>
                              <option value="6">6</option>
                              <option value="7">7</option>
                              <option value="8">8</option>
                              <option value="9">9</option>
                              <option value="10">10</option>
                            </select>
                            <label for="usuario_chats"><span data-i18n="Cantidad de chats">Cantidad de chats</span><span class="red-text"> *</span></label>
                          </div>
                          <div id="cantidadChats" hidden>{{usuario.USU_NCHATS}}</div>
                       
                          {{! Skill }}
                          {{!-- <div class="input-field col s12 m6 l4">
                            <select class="select" name="usuario_skill"id="usuario_skill" required multiple>
                              <option value="L0">SUPERVISOR</option>
                              <option value="IB">INBOUND</option>
                            </select>
                            <label for="usuario_skill"><span data-i18n="Skill">Skill</span><span class="red-text"> *</span></label>
                          </div>
                          <div id="skill" hidden>{{usuario.USU_CSKILL}}</div> --}}

                          {{! EMAIL }}
                          {{!-- <div class="input-field col s12 m6 l4">
                            <input type="email" name="usuario_emailUsuario" value="{{usuario.USU_CORREO}}" id="usuario_emailUsuario" required/>
                            <label for="usuario_emailUsuario"><span data-i18n="Email">Email</span><span class="red-text"> *</span></label>
                          </div> --}}
                        
                          {{! Estado }}
                          <div class="input-field col s12 m6 l4">
                            <select class="select" name="usuario_estado" id="usuario_estado" required>
                              <option value="" disabled selected>Select Option
                              </option>
                              <option value="ACTIVO">ENABLE</option>
                              <option value="NO ACTIVO">DISABLE</option>
                            </select>
                            <label for="usuario_estado"><span data-i18n="Estado">Estado</span><span class="red-text"> *</span></label>
                          </div>
                          <div id="estadoUsuario" hidden>{{usuario.USU_CESTADO}}</div>

                        </div>

                        <div class="row">
                          <div class="nput-field col s12">
                            <button id="btnActualizarUsuario" class="btn color-oscuro waves-effect waves-light right" type="submit" name="action">
                              <span data-i18n="Modificar usuario">Modificar usuario</span>
                              <i class="material-icons right">send</i>
                            </button>
                          </div>
                        </div>

                      </form>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<script src="/js/actualizarUsuario.js"></script>