<div id="main">
  <div class="row">
    <div class="col s12">
      <div class="container">
        <div class="section ">
          <div class="row">
            <div class="col s12">
              <div class="card">
                <div class="card-content">
                  <h4 class="card-title" data-i18n="Lista de plantillas">Lista de plantillas </h4>
                  <div class="row">
                    <div class="col s12">
                      <table id="tuTablaPlantillas" class="display">
                        <thead style="color: #fff">
                          <tr class="custom-gradient_black">
                            <th data-i18n="No.">No.</th>
                            <th data-i18n="Nombre">Nombre</th>
                            <th data-i18n="Contenido">Contenido</th>
                            <th data-i18n="Accion">Acci√≥n</th>
                          </tr>
                        </thead>
                        <tbody>
                          {{#each listaPlantillas}}
                          <tr>
                            <td>{{this.PKPLA_NCODIGO}}</td>
                            <td>{{this.PLA_CNOMBRE}}</td>
                            <td>{{this.PLA_CCONTENIDO}}</td>
                            <td>
                              <a class="btn waves-effect waves-light color-oscuro" id="editar"
                                href="/plantillas/actualizarPlantilla/{{this.EnCrypt}}"><i
                                  class='bx bx-edit-alt'></i></a>
                              <a class="btn waves-effect waves-light red accent-2" id="borrar"
                                eliminarPlantilla="{{this.EnCrypt}}"><i class='bx bx-trash-alt'></i></a>
                            </td>
                          </tr>
                          {{/each}}
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/listarPlantillas.js"></script>