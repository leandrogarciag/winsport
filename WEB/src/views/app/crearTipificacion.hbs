<div id="main">
    <div class="row">
        <div class="col s12">
            <div class="container">

                <div class="row">
                    <div class="col s12">
                        <div id="input-fields" class="card card-tabs">
                            <div class="card-content">
                                <div class="card-title">
                                    <div class="row">
                                        <div class="col s12 m6 l10">
                                            <h4 class="card-title" data-i18n="Crear tipificación">Crear tipificación</h4>
                                        </div>
                                    </div>
                                </div>
                                <div id="view-input-fields">
                                    <div class="row">
                                        <div class="col s12">
                                            <form class="row"
                                                action="/tipificaciones/crearTipificacion"
                                                method="post">

                                                

                                                <div class="row">
                                                    {{! Contenido }}
                                                    <div class="input-field col s12 m12 l12">
                                                        
                                                        <div>
                                                                <label for="tipificacion_nombre" data-i18n="Contenido">Contenido<span
                                                                class="red-text">*</span></label>
                                                        </div>
                                                        <div>
                                                        <textarea name="tipificacion_nombre" id="tipificacion_nombre" required style="height: auto; "onpaste="contarcaracteres();" onkeyup="contarcaracteres();"></textarea>

                                                        </div>
                                                    </div>

                                                </div>


                                                <div class="row">
                                                    <div class="nput-field col s12">
                                                        <button class="btn color-oscuro waves-effect waves-light right"
                                                            type="submit" name="action"> <span data-i18n="Crear tipificacion">Crear tipificacion</span>
                                                            <i class="material-icons right">send</i>
                                                        </button>
                                                    </div>
                                                </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
